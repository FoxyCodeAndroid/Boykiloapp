<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_gray2"
    android:orientation="vertical"
    tools:context="com.example.boykloapp.ui.CoupleActivity">

    <include
        android:id="@+id/include"
        layout="@layout/include_custom_toolbar_couple"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Age"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/couple_edit_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:ems="10"
                android:inputType="number"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textSize="12sp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/couple_edit_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="number"
                    android:textSize="10.5dp" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KG"
                    android:layout_gravity="center"
                    android:textColor="@color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/couple_edit_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="10.5sp"/>
                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="CM"
                    android:textColor="@color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textSize="12sp"/>
            <Spinner
                android:id="@+id/listview_cinsiyet_couple"
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/couple_result_text"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                />

            <params.com.stepprogressview.StepProgressView

                android:id="@+id/pb_couple"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/progressbar_color"
                android:visibility="invisible"
                app:currentProgress="45"
                app:markerColor="@android:color/black"
                app:markerWidth="13dp"
                app:markers="0,30,70,90"
                app:progressColor="#F19A19"
                app:textMargin="5dp"
                app:textSize="15sp"
                app:totalProgress="90" />

            <TextView
                android:id="@+id/couple_height_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Height"
                android:visibility="invisible"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/couple_weight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:visibility="invisible"
                android:inputType="textPersonName"
                android:text="Weight"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/rul"
                android:layout_width="wrap_content"
                android:layout_height="368dp"
                app:srcCompat="@drawable/ruler" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/single_custom_button_result"
                android:gravity="fill"
                android:onClick="couple_btn_result"
                android:paddingStart="5dp"
                android:text="RESULT"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textSize="12dp"
                />
            <EditText
                android:id="@+id/couple_edit_age2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:inputType="number"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Weight"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/couple_edit_height2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:textSize="11sp"
                    android:layout_marginTop="5dp" />
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="KG"
                    android:textColor="@color/white" />

            </LinearLayout>
            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:textSize="12sp"
                android:text="Height"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/couple_edit_weight2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:textSize="11sp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="CM"
                    android:textColor="@color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="5dp"/>

            <Spinner
                android:id="@+id/listview_cinsiyet_couple2"
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/couple_result_text2"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                />
            <params.com.stepprogressview.StepProgressView

                android:id="@+id/pb_couple2"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/progressbar_color"
                app:currentProgress="45"
                android:visibility="invisible"
                app:markerColor="@android:color/black"
                app:markerWidth="13dp"
                app:markers="0,30,70,90,120"
                app:progressColor="#F19A19"
                app:textMargin="5dp"
                app:textSize="15sp"
                app:totalProgress="150" />

            <TextView
                android:id="@+id/couple_height_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Height"
                android:layout_marginTop="15dp"
                android:visibility="invisible"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/couple_weight_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Weight"
                android:textSize="15sp"
                android:visibility="invisible"
                android:layout_marginTop="15dp"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>