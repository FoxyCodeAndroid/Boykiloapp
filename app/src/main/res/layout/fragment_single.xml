<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_gray2"
    android:orientation="vertical">

    <include
        android:id="@+id/include"
        layout="@layout/include_custom_toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/ruler" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:gravity="start"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Please enter your information to result."
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Age"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/single_edit_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:text="Weight"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/single_edit_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:ems="10"
                    android:inputType="number"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/single_mass_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="KG"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/single_edit_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:ems="10"
                    android:inputType="number"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/single_mass_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CM"
                    android:textColor="@color/white"
                    android:textSize="18sp" />


            </LinearLayout>


            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="@color/white" />

            <Spinner
                android:id="@+id/listview_cinsiyet_single"
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="111dp"
                android:layout_height="36dp" />

            <TextView
                android:id="@+id/btn_single_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/single_custom_button_result"
                android:gravity="center"
                android:paddingStart="15dp"
                android:text="RESULT"
                android:textSize="18sp"
                app:drawableRightCompat="@drawable/single_button_corner2" />

            <params.com.stepprogressview.StepProgressView

                android:id="@+id/pb"
                android:layout_width="309dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/progressbar_color"
                android:visibility="gone"
                app:markerColor="@android:color/black"
                app:markerWidth="3dp"
                app:markers="17,25"
                app:progressColor="#F19A19"
                app:textMargin="1dp"
                app:textSize="20sp"
                app:totalProgress="40" />

            <TextView
                android:id="@+id/single_result_text"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/single_gender_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Gender"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/single_weight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Weight"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/single_height_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Height"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/single_age_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Height"
                android:textSize="18sp"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView14"
                app:srcCompat="@drawable/reverseruler" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>